
<h1>My Decks</h1>

<%= link_to 'New Deck', new_deck_path %>

<% if @decks.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number of Cards</th>
        <th>Last updated</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @decks.each do |deck| %>
        <tr>
          <td><%= link_to deck.name, deck %></td>
          <td><%= deck.cards.count %></td>
          <td><%= time_ago_in_words deck.updated_at %> ago</td>
          <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
          <td><%= link_to 'View', player_path(deck) %> |</td>
          <td><%= link_to 'Delete', deck, method: :delete, data: { confirm: "Are you sure you want to remove this deck and all #{deck.cards.count} cards?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p>You don't have any decks. You should create one.</p>
<% end %>
