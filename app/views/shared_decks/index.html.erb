<% if @decks.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number of Cards</th>
        <th>Last updated</th>
      </tr>
    </thead>

    <tbody>
      <% @decks.each do |deck| %>

        <tr>
          <td><%= link_to deck.name, shared_deck_path(deck.slug) %></td>
          <td><%= deck.cards.count %></td>
          <td><%= time_ago_in_words deck.updated_at %> ago</td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p>There are no decks shared.</p>
<% end %>
