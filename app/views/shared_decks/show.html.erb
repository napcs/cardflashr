<h2> <%= @deck.name %></h2>

<p>
  <%= @deck.description %>
</p>

<p>
  Deck shared <%= time_ago_in_words @deck.published_at %> ago.
</p>

<p>
  <% if user_signed_in? %>
    <%= button_to "Save to your decks", clone_shared_deck_path(@deck.slug), {class: "button primary"} %>
  <% else %>
    Sign in or create an account to clone this.
  <% end %>
</p>

<hr>


<div class="card_tiles">
  <% @deck.cards.each do |card| %>

    <div class="tile">
      <%= react_component('Card', card, {prerender: true}) %>
    </div>
  <% end %>
</div>

